{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "strict": true,
      "jsx": "react-jsx",
    },
    "include": [
      "src/*",
      "src/custom.d.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules"
    ]
  }